<div class="container">
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger fixed alert-dismissible fade show">
            {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success fixed alert-dismissible fade show">
            {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        </div>
    {% endfor %}
</div>
