{% extends 'base.html.twig' %}
{% block title %}Pc Pas à pas - Configurateur{% endblock %}

{% block body %}
    <div {{ vue_component('panierComponent', {'panier': panier} )}}></div>
    <h1 class='text-center'>Ajoutez des composants à votre configuration</h1>
    {% for message in app.flashes('info') %}
        <div class="alert alert-info fixed alert-dismissible fade show">
            {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        </div>
    {% endfor %}
    <div {{ vue_component('configurateurComponent', { 'categories' : categories, 'panier' : panier } )}}></div>
    <div {{ vue_component('configDetails', {'panier': panier} )}}></div>
</div>
{% endblock %}

